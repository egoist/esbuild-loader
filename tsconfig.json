{
	"include": ["src"],
	"compilerOptions": {
		"outDir": "dist",
		"module": "commonjs",
		"target": "ES2018",
		"lib": ["ES2018"],
		"strict": true,
		"declaration": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	}
}
